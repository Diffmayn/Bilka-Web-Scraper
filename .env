# Environment Configuration for Bilka Price Monitor
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL=sqlite:///data/bilka_prices.db

# Scraping Configuration
BILKA_BASE_URL=https://bilka.dk
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36

# Optional: Proxy Configuration (leave empty if not using proxy)
PROXY_HOST=
PROXY_PORT=
PROXY_USERNAME=
PROXY_PASSWORD=

# Optional: Email Configuration for Alerts
SMTP_SERVER=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
ALERT_EMAIL=

# Optional: Slack/Discord Webhook for Notifications
SLACK_WEBHOOK_URL=
DISCORD_WEBHOOK_URL=

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=./logs/scraper.log

# UI Configuration
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0